{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "esModuleInterop": true
  },
  "paths": {
    "@/*": ["./src/*"],
    "@shared/*": ["./src/shared/*"],
    "@screens/*": ["./src/screens/*"],
    "@utils/*": ["./src/utils/*"],
    "@assets/*": ["./src/assets/*"],
    "@services/*": ["./src/services/*"],
    "@hooks/*": ["./src/hooks/*"],
    "@navigation/*": ["./src/navigation/*"],
    "@config/*": ["./src/config/*"]
  }
}
